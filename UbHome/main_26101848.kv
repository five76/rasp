#: import C kivy.utils.get_color_from_hex
<ButtonPrep@Button>:
    background_normal: ''
    background_color: C ('#80125C')
    border: 16,16,16,16
    #on_press: app.root.select_prep(self.text)
    #on_press: root.ids.root_widget.select_prep(self.text)
<ButtonForward@Button>:
    background_normal: ''
    background_color: C ('#808080')
    #on_press: app.root.update_prep(self.text)
<ButtonDay@Button>:
    background_normal: ''
    background_color: C ('#94800D')
    #on_press: app.root.result(self.text)
<ButtonGroup@Button>:
    background_normal: ''
    background_color: C ('#80125C')
    border: 16,16,16,16
<ButtonKurs@Button>:
    background_normal: ''
    background_color: C ('#80125C')
    border: 16,16,16,16
<ButtonLevel@Button>:
    background_normal: ''
    background_color: C ('#80125C')
    border: 16,16,16,16
<GridLevel@GridLayout>:
    cols: 2
    rows: 1
    padding:dp(5),dp(5),dp(5),dp(5)
    spacing:5,5
<GridKurs@GridLayout>:
    cols: 4
    rows: 1
    padding:dp(5),dp(5),dp(5),dp(5)
    spacing:5,5
<GridGr@GridLayout>:
    cols: 3
    rows: 4
    padding:dp(5),dp(5),dp(5),dp(5)
    spacing:5,5
<GridNameGr@GridLayout>:
    cols: 1
    rows: 1
    padding:dp(5),dp(5),dp(5),dp(5)
    spacing:5,5
<GridRasp@GridLayout>:
    cols: 1
    rows: 1
    padding:dp(5),dp(5),dp(5),dp(5)
    spacing:5,5

WindowManager:
    ScreenOne:
    ScreenTwo:
    ScreenThree:

<ScreenOne>:
    name: "screen_one"

    BoxLayout:
        id: root_widget
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 17/255.0, 96/255.0, 98/255.0, 1
            Rectangle:
                pos: self. pos
                size: self.size
        GridLayout:
            cols: 3
            rows: 6
            padding:dp(5),dp(5),dp(5),dp(50)
            spacing:5,5
            #row_default_height: 40
            #row_force_default: True
            ButtonPrep:
                id: pr1
                text: root.prep_list[0]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr2
                text: root.prep_list[1]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr3
                text: root.prep_list[2]
            ButtonPrep:
                id: pr4
                text: root.prep_list[3]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr5
                text: root.prep_list[4]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr6
                text: root.prep_list[5]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr7
                text: root.prep_list[6]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr8
                text: root.prep_list[7]
                on_press: root.select_prep(self.text)
            ButtonPrep:
                id: pr9
                text: root.prep_list[8]
                on_press: root.select_prep(self.text)
            ButtonForward:
                id: back
                text: "BACK"
                on_press: root.update_prep(self.text)
            Button:
                id: hole
                text: ""
                background_color: 0,0,0,0
            ButtonForward:
                id: next
                text: "NEXT"
                on_press: root.update_prep(self.text)
            ButtonDay:
                id: day1
                text: root.data_list[0]
                on_press: root.result(self.text)
            ButtonDay:
                id: day2
                text: root.data_list[1]
                on_press: root.result(self.text)
            ButtonDay:
                id: day3
                text: root.data_list[2]
                on_press: root.result(self.text)
            Label:
                text: ""
            Label:
                id: fio
                text: ""
                color: 1, 1, 1, 1
                #font_size: dp(20)
            Label:
                text: ""
        GridLayout:
            cols: 1
            rows: 2
            #row_default_height: 150
            #row_force_default: True
            Label:
                id: itog
                text: "Расписание"
                color: 1, 1, 1, 1

            FloatLayout:
                Button:
                    text: "Группы"
                    background_normal: ''
                    background_color: C ('#808080')
                    size_hint:.2,.2
                    pos_hint: {'center_x':0.89, 'center_y':.15}

                    #on: release:
                    #    app.root.current = "screen_two"
                    #    root.manager.transition. direction = "left"
                    on_press:
                        # You can define the duration of the change
                        # and the direction of the slide
                        root.manager.transition.direction = 'left'
                        root.manager.transition.duration = 1
                        root.manager.current = 'screen_two'

<ScreenTwo>:
    name: "screen_two"
    BoxLayout:
        id: root_widget
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 17/255.0, 96/255.0, 98/255.0, 1
            Rectangle:
                pos: self. pos
                size: self.size
        GridLevel:
            id: grid_level
            ButtonLevel:
                text: "НПО"
                on_press: root.select_level(self.text)
            ButtonLevel:
                text: "СПО"
                on_press: root.select_level(self.text)
        GridKurs:
            id: grid_kurs
            ButtonKurs:
                text: "1"
                on_press: root.select_kurs(self.text)

            ButtonKurs:
                text: "2"
                on_press: root.select_kurs(self.text)
            ButtonKurs:
                text: "3"
                on_press: root.select_kurs(self.text)
            ButtonKurs:
                text: "4"
                on_press: root.select_kurs(self.text)
        GridGr:
            id: list_gr
            ButtonGroup:
                id: gr1
                on_press: root.select_group(self.text)
            ButtonGroup:
                id: gr2
                on_press: root.select_group(self.text)
            ButtonGroup:
                id: gr3
                on_press: root.select_group(self.text)
            ButtonGroup:
                id: gr4
                on_press: root.select_group(self.text)
            ButtonGroup:
                id: gr5
                on_press: root.select_group(self.text)
            ButtonGroup:
                id: gr6
                on_press: root.select_group(self.text)
            ButtonDay:
                id: daygr1
                text: root.data_list[0]
                on_press: root.resultgr(self.text)
            ButtonDay:
                id: daygr2
                text: root.data_list[1]
                on_press: root.resultgr(self.text)
            ButtonDay:
                id: daygr3
                text: root.data_list[2]
                on_press: root.resultgr(self.text)
            Label:
            Label:
                id: name_gr
                text: "Расписание групп"
            Label:
        GridRasp
            Label:
                id: itogRasp
                text: ""

        BoxLayout:
            Button:
                text: "Go to Screen 3"
                background_color : 1, 1, 0, 1
                #on: release:
                #    app.root.current = "screen_one"
                #    root.manager.transition. direction = "left"
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.transition.duration = 1
                    root.manager.current = 'screen_one'


